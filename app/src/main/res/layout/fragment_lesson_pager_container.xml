<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lesson_container"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <!-- Lesson counter at top -->
    <TextView
        android:id="@+id/lesson_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:background="@null"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:letterSpacing="0.03"
        android:padding="12dp"
        android:text="Lesson %s"
        android:textAlignment="center"
        android:textColor="#2E2E2E"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- ViewPager2 for swipeable content -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/lesson_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bottom buttons -->
    <!-- Navigation buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12sp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrevious"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingVertical="10dp"
            android:text="@string/previous"
            android:textColor="#6C63FF"
            app:cornerRadius="30dp"
            app:strokeColor="#6C63FF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:paddingHorizontal="28dp"
            android:paddingVertical="10dp"
            android:text="@string/next"
            android:textColor="#FFFFFF"
            app:backgroundTint="#6C63FF"
            app:cornerRadius="30dp" />
    </LinearLayout>

</LinearLayout>