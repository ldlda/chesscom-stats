<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/player_detail_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_person"
        android:contentDescription="@string/player_avatar_desc"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/player_detail_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_username"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/player_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_name"
        android:textSize="18sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/player_detail_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_stats"
        android:layout_marginTop="16dp"/>
</androidx.appcompat.widget.LinearLayoutCompat>